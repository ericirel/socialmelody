<%= form_for @user do |f| %>

  <% if @user.errors.any? %>
  <ul>
    <% @user.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
  <% end %>
  <%= f.label :email %>
  <%= f.text_field :email %><br>
  <%= f.label :password %>
  <%= f.text_field :password %><br>
  <%= f.label :fname, 'First Name' %>
  <%= f.text_field :fname %><br>
  <%= f.label :lname, 'Last Name' %>
  <%= f.text_field :lname %><br>
  <%= f.label :location %>
  <%= f.text_field :location %><br>
  <%= f.label :bio %>
  <%= f.text_field :bio %>
  <%= f.submit %>
<% end %>
