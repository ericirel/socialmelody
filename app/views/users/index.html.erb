<h1>Welcome to Ditty</h1>
<h3>Share what you're listening to with friends</h3>

<p><%= link_to 'Sign Up', new_user_path %></p>
<ul>
  <% @users.each do |user| %>
  <li><%= link_to user.username, user %> |
    <%= user.bio %> |
    <%= link_to 'delete', user, method: :delete, data: { confirm: "Are you sure?"} %>
</li>
  <% end %>
  </ul>
